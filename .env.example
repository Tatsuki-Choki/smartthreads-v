# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# App base URL (used for OAuth redirects)
# e.g. http://localhost:3000 or https://your-app.example.com
APP_URL=

# Threads API
THREADS_APP_ID=your_threads_app_id_here
THREADS_APP_SECRET=your_threads_app_secret_here
# Optional: If set, overrides computed redirect
THREADS_REDIRECT_URI=http://localhost:3000/api/auth/threads/callback

# Encryption
# 32-byte key for AES-256-GCM. Example (base64):
# THREADS_TOKEN_ENC_KEY=YWJjZGVmZ2hpamtsbW5vcHFyc3R1dnd4eXowMTIzNDU=
THREADS_TOKEN_ENC_KEY=

# Vercel Cron
CRON_SECRET=your_cron_secret_here

# Webhook
WEBHOOK_SECRET=your_webhook_secret_here
THREADS_WEBHOOK_SECRET=your_threads_webhook_secret_here

# Development (テスト用)
# 開発環境で認証をスキップする場合はtrueに設定
SKIP_AUTH_CHECK=false
